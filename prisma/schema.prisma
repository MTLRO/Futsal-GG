generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id           Int           @id @default(autoincrement())
  name         String
  lastName     String
  elo          Int           @default(1500)
  teamPlayers  TeamPlayer[]
  @@index([lastName, name])
}

model TeamPlayer {
  id         Int   @id @default(autoincrement())
  side       Side
  playerId   Int
  goals      Int   @default(0)
  deltaELO   Int   @default(0)
  gameInARow Int   @default(1)  // Number of games in a row this player played (for fatigue tracking)
  player     Player @relation(fields: [playerId], references: [id], onDelete: Cascade)
  gameId     Int
  game       Game  @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([playerId])
  @@index([gameId])
}

model Game {
  id                    Int          @id @default(autoincrement())
  startDateTime         DateTime
  timePlayed            Int?
  videoLink             String?
  homeTeamAverageElo    Int?         // Average ELO of HOME team at game time
  awayTeamAverageElo    Int?         // Average ELO of AWAY team at game time
  teamPlayers           TeamPlayer[]

  @@index([startDateTime])
}

model TeamComposition {
  id        Int    @id @default(autoincrement())
  team      Team   @unique
  playerIds Int[]
}

model GameMaster {
  id                Int      @id @default(autoincrement())
  passwordHash      String   @unique
  videoPasswordHash String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum Team {
  A
  B
  C
}

enum Side {
  HOME
  AWAY
}
